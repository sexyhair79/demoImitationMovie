<?xml version="1.0" encoding="UTF-8"?>
<!-- 下面的白色面板挡住上面的三个边，只留下下边 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="@color/txt_gray_1" />
            <!-- 描边 -->
            <stroke
                android:width="1px"
                android:color="@color/txt_gray_1" />

            <padding
                android:bottom="0px"
                android:left="1px"
                android:right="0px"
                android:top="0px" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/common_white" />
        </shape>
    </item>

</layer-list>